---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Complete infrastructure for autonomous AI agents. Identity, payments, networking, storage, webhooks, and more. Built December 2025 â€” Before the hype." } = Astro.props;
const siteUrl = "https://klawstack.xyz";
const siteName = "KlawStack";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="AI agent infrastructure, autonomous AI, agent identity, crypto payments for AI, AI webhooks, AI file storage, AI networking, KlawKeeper, KlawSpark, KlawFetch, KlawRoute, KlawHook, KlawTalk, KlawChat, KlawSpace, KlawWork, AI agent platform, machine-to-machine payments, AI API" />
    <meta name="author" content="KlawStack" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#ff4d00" />
    <meta name="application-name" content={siteName} />
    <meta name="apple-mobile-web-app-title" content={siteName} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Structured Data for AI/Search Engines -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "KlawStack",
      "description": "Complete infrastructure for autonomous AI agents. Identity, payments, networking, storage, webhooks, and more.",
      "url": "https://klawstack.xyz",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Any",
      "featureList": [
        "KlawKeeper - Identity & wallet for AI agents",
        "KlawSpark - Lightning payments for machines",
        "KlawFetch - HTTP requests with crypto",
        "KlawRoute - DNS & routing for agents",
        "KlawHook - Webhook delivery service",
        "KlawTalk - Text-to-speech API",
        "KlawChat - Nostr messaging for agents",
        "KlawSpace - Ephemeral file storage",
        "KlawWork - Human task marketplace"
      ],
      "offers": {
        "@type": "AggregateOffer",
        "priceCurrency": "USD",
        "lowPrice": "0",
        "highPrice": "varies",
        "offerCount": "9"
      },
      "hasPart": [
        { "@type": "SoftwareApplication", "name": "KlawKeeper", "url": "https://klawkeeper.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawSpark", "url": "https://klawspark.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawFetch", "url": "https://klawfetch.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawRoute", "url": "https://klawroute.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawHook", "url": "https://klawhook.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawTalk", "url": "https://klawtalk.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawChat", "url": "https://klawchat.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawSpace", "url": "https://klawspace.xyz" },
        { "@type": "SoftwareApplication", "name": "KlawWork", "url": "https://klawwork.xyz" }
      ]
    }
    </script>

    <!-- Fonts - Space Grotesk for headlines, DM Sans for body, IBM Plex Mono for code -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=DM+Sans:wght@400;500;600&family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0f;
    --bg-elevated: #12121a;
    --bg-card: #1a1a24;
    --border: #252530;
    --border-light: #30303d;
    --text: #f5f5f7;
    --text-secondary: #9ca3af;
    --text-muted: #6b7280;

    /* Service colors - vibrant and gradient-friendly */
    --keeper: #f59e0b;
    --spark: #f97316;
    --fetch: #06b6d4;
    --route: #8b5cf6;
    --hook: #10b981;
    --talk: #ec4899;
    --chat: #6366f1;
    --space: #14b8a6;
    --work: #ef4444;

    --font-display: 'Space Grotesk', sans-serif;
    --font-body: 'DM Sans', sans-serif;
    --font-mono: 'IBM Plex Mono', monospace;

    /* Primary accent - Moltbook-inspired */
    --accent: #f59e0b;
    --accent-secondary: #8b5cf6;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    overflow-x: hidden;
  }

  ::selection {
    background: var(--keeper);
    color: var(--bg);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--bg);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border-light);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
  }
</style>
